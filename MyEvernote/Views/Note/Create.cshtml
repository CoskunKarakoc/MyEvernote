@model MyEvernote.Entities.Note

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/Validation-Summary.css" rel="stylesheet" />
<div class="row">
    <div class="col-md-12">
        <h2 class="text-info">Create</h2>
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-md-offset-1 col-md-10">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4 class="text-info">Note</h4>
                <hr />
                @Html.ValidationSummary(false)
                <div class="form-group">
                    @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2 text-info" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Text, htmlAttributes: new { @class = "control-label col-md-2 text-info" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.Text, 5, 30, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.isDraft, htmlAttributes: new { @class = "control-label col-md-2 text-info" })
                    <div class="col-md-10">
                        <div class="checkbox">
                            @Html.EditorFor(model => model.isDraft)
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.CategoryId, "Kategori", htmlAttributes: new { @class = "control-label col-md-2 text-info" })
                    <div class="col-md-10">
                        @Html.DropDownList("CategoryId", null, htmlAttributes: new { @class = "form-control" })
                    </div>
                </div>


                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-default btn-sm"><span class="glyphicon glyphicon-floppy-saved"></span> Create</button>
                        <a href="@Url.Action("Index", "Note")" class="btn btn-default btn-sm"><span class="glyphicon glyphicon-hand-left"></span> Back to List</a>
                    </div>
                </div>
            </div>
        }


    </div>
</div>