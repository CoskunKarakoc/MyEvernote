@using MyEvernote.BusinessLayer
@using MyEvernote.Entities
@using MyEvernote.Models

@{

    List<Category> liste = CacheHelper.GetCategoryFromCache();
}


<div class="list-group ">
    <a href="@Url.Action("Index","Home")" class="list-group-item active" style="background-color: #262626; border: #262626;">Tüm Kategoriler</a>
    @foreach (Category category in liste)
    {
        <a href="@Url.Action("Select","Home",new {id=category.Id})" title="@category.Description" class="list-group-item"><span class="glyphicon glyphicon-arrow-right"></span> @category.Title</a>

    }
   
</div>