@model Note


<div class="row">
    <div class="col-md-12">
        <h3 class="text-center text-muted">@Model.Title</h3>
    </div>
    <div class="col-md-12">
        <hr />
    </div>
    <div class="col-md-12">
        <p class="text-justify">
            @Model.Text 
        </p>
    </div>
    <div class="col-lg-5 pull-right">
        <span class="glyphicon glyphicon-user"></span> @Model.Owner.UserName&nbsp;&nbsp;&nbsp;<span class="glyphicon glyphicon-time"></span> @Model.ModifiedOn
    </div>
</div>